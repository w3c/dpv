  <span>{% if person['foaf:homepage'] %}<a href="{{person['foaf:homepage']}}"><b>{{ person['foaf:name'] }}</b></a>
    {% elif person['scoro:hasORCID'] %}<a href="https://orcid.org/{{person['scoro:hasORCID']}}"><b>{{ person['foaf:name'] }}</b></a>
